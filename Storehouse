# Currency calculator

rate = float(input("Give a rate: "))
def counterEUDL(qty):
    if float(qty) <= 0:
        raise ValueError("Give a positive number")
    else:
        print(f"Euro vs Dollar: {float(qty) * rate}")
        
counterEUDL(((input("Give a number of Euros: "))))

